<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="2dp"
    android:layout_margin="5dp"
    android:background="@drawable/rounded_corner"
>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"

        app:layout_constraintCircleAngle="40"
        app:layout_constraintCircleRadius="100dp"
        app:circularflow_defaultRadius="100dp"
        app:circularflow_radiusInDP="100dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_item"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintCircleRadius="300dp"
            app:cardCornerRadius="70dp" >
            <ImageView
                android:id="@+id/itemPhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:padding="4dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="12sp"
            android:maxLines="1"
            android:gravity="center"
            android:text="@string/user_name"
            android:id="@+id/item_tv_name"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_tv_time"
            app:layout_constraintStart_toEndOf="@+id/cv_item"
            app:layout_constraintEnd_toStartOf="@id/item_tv_points"/>

        <TextView
            android:padding="4dp"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/item_tv_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="parent"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="12sp"
            android:maxLines="1"
            android:gravity="center"
            android:text="@string/points"
            android:id="@+id/item_tv_points"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/item_tv_time"
            android:padding="4dp"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/cv_item"
            app:layout_constraintEnd_toStartOf="@id/item_tv_boards"
            app:layout_constraintTop_toBottomOf="@id/item_tv_points"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="12sp"
            android:maxLines="1"
            android:gravity="center"
            android:text="@string/time"
            android:textColor="@color/white" />
        <TextView
            android:padding="4dp"
            android:layout_width="0dp"
            app:layout_constraintStart_toEndOf="@id/item_tv_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_tv_points"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="16sp"
            app:autoSizeMinTextSize="12sp"
            android:maxLines="1"
            android:gravity="center"
            android:text="@string/boards"
            android:id="@+id/item_tv_boards"
            android:textColor="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>