<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ativities.SinglePlayerActivity"
    android:background="@color/background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/game_level"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/game_pont"
        android:gravity="center"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:text="@string/level"/>
    <TextView
        android:id="@+id/game_pont"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/game_level"
        app:layout_constraintEnd_toStartOf="@id/game_time"
        android:gravity="center_vertical|end"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:text="@string/points"
        />
    <TextView
        android:id="@+id/game_time"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/game_pont"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical|end"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:text="@string/time"
        />

        <FrameLayout
            android:id="@+id/game_table"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/game_level" />

        <TextView
            android:id="@+id/move_response"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/game_table"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical|end"
            android:textSize="26sp"
            android:text="@string/nothing_reponse"
            />
</androidx.constraintlayout.widget.ConstraintLayout>