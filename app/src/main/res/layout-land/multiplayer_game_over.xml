<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv_multi_player_game_over_modal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/game_over"
        android:gravity="center"
        android:textSize="32sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_multi_player_game_over_modal"
        android:layout_width="500dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_multi_player_game_over_modal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_multi_player_game_over_modal"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/btn_multi_player_game_over_modal"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view_multi_player_game_over_modal"
        app:layout_constraintTop_toBottomOf="@+id/tv_multi_player_game_over_modal"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>